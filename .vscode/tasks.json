{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "suppressTaskName": true,
            "taskName": "typescript",
            "problemMatcher": "$tsc-watch",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated"
            },
            "isBackground": true,
            "type": "process",
            "command": "./node_modules/typescript/bin/tsc",
            "args": ["-w", "-p", "."],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}